<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>Hrunogochi</title>
        <link rel="stylesheet" href="/main.css">
    </head>
    <body>
        <div class="buttons">
            <article class="state">
                <div class="energy">
                    Энергия: <span class="energy-value"></span>%
                </div>
                <div class="mood">
                    Настроение: <span class="mood-value"></span>%
                </div>
                <div class="satiety">
                    Сытость: <span class="satiety-value"></span>%
                </div>
            </article>
            <div class="begin-again">
                Начать заново
            </div>
        </div>
        <svg id="game" width="100%" height="100%">
            <defs>
                <linearGradient id="sky-gradient" x1="0%" y1="0%" x2="0%" y2="100%">
                    <stop offset="0%" stop-color="#09f" />
                    <stop offset="70%" stop-color="#9ff" />
                    <stop offset="100%" stop-color="#fff" />
                </linearGradient>
            </defs>
            <g id="sky">
                <rect fill= "url(#sky-gradient)" width="100%" height="100%"/>
                <path d="M -100,600 C150,350 700,350 1400,600" fill="#ceec9a"/>
            </g>
            <g id="hrundel">
                <g id="legs">
                    <path d="M630,448 C621,454 623,454 615,450" stroke="#eea9b8" stroke-width="2" fill="pink"></path>
                    <path d="M570,450 C567,465 567,465 558,466
                                    C559,458 559,458 556,440" stroke="#eea9b8" stroke-width="2" fill="pink"></path>
                </g>
                <g id="body">
                    <path id="tail" d="M660,400 C680,405 675,405 670,408 C665,400 670,400 685,400" fill="none" stroke="#eea9b8" stroke-width="3" />
                    <path d="M578,379 C680,380 665,420 669,420
                                    M667,420 C662,430 662,438 650,448
                                    C650,458 640,468 640,465
                                    C635,467 635,466 630,463
                                    C633,453 633,453 633,447
                                    C600,453 600,453, 590,453
                                    M590,453 C588,457 587,465, 578,467
                                    M578,467 574,467 572,453 510,400 578,379"
                          stroke="#eea9b8" stroke-width="2" fill="#ffc0cb"/>
                    <polygon points="578,379 670,420 590,453, 578,467" fill="#ffc0cb"/>
                </g>
                <g id="head">
                    <g id="ears">
                        <path d="M520,340 C500,320 500,320 480,350 520,340" stroke="#eea9b8" fill="pink" />
                        <path d="M560,340 C580,320 580,320 600,350 600,340" stroke="#eea9b8" fill="pink" />
                    </g>
                    <circle r="50" cx="540" cy="380" fill="#ffc0cb" stroke="#eea9b8" stroke-width="2"/>
                    <g id="eyes">
                        <ellipse class="eye" rx="13" ry="18" cx="525" cy="365" fill="white" stroke="#eea9b8" stroke-width="2"/>
                        <ellipse class="eye" rx="13" ry="18" cx="555" cy="365" fill="white" stroke="#eea9b8" stroke-width="2"/>
                        <ellipse class="pupils" rx="8" ry="13" cx="525" cy="369" fill="black" />
                        <ellipse class="pupils" rx="8" ry="13" cx="555" cy="369" fill="black" />
                        <circle class="hotspot" r="3" cx="530" cy="360" fill="white"/>
                        <circle class="hotspot" r="3" cx="560" cy="360" fill="white"/>
                        <path id="eyelashes" d="M515,355 C510,350 510,350 510,345" fill="none" stroke="#eea9b8" stroke-width="2" />
                        <path id="eyelashes" d="M513,360 C508,355 508,355 508,350" fill="none" stroke="#eea9b8" stroke-width="2" />
                        <path id="eyelashes" d="M511,365 C506,360 506,360 506,355" fill="none" stroke="#eea9b8" stroke-width="2" />
                        <path id="eyelashes" d="M565,355 C570,350 570,350 570,345" fill="none" stroke="#eea9b8" stroke-width="2" />
                        <path id="eyelashes" d="M567,360 C572,355 572,355 572,350" fill="none" stroke="#eea9b8" stroke-width="2" />
                        <path id="eyelashes" d="M569,365 C574,360 574,360 574,355" fill="none" stroke="#eea9b8" stroke-width="2" />
                    </g>
                    <g class="nose-node">
                        <circle id="nose" r="15" cx="540" cy="389" fill="#eea9b8"/>
                        <polyline points="535,383 532,388 535,393" stroke="#cd6889" stroke-width="2" fill="none"/>
                        <polyline points="545,383 547,388 545,393" stroke="#cd6889" stroke-width="2" fill="none"/>
                    </g>
                    <g class="mouth-node">
                        <path id="mouth" d="M523,406 C540,420 548,420 552,406" stroke="#cd6889" stroke-width="2" fill="none"/>
                    </g>
                </g>
            </g>
        </svg>
        <script src="/js.cookie.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/snap.svg/0.4.1/snap.svg-min.js" type="text/javascript"></script>
        <script src="/main.js"></script>
    </body>
</html>